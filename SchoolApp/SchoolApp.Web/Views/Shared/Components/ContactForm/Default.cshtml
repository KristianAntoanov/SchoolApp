@model ContactFormModel

<div class="col-md-8">
    <form id="contactForm" asp-controller="Home" asp-action="SubmitContact" method="post" class="p-4">
        <div class="row">
            <div class="col-md-6 mb-3">
                <input asp-for="@Model.Name" class="form-control contact-input" placeholder="Вашето име" autocomplete="on" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <input asp-for="@Model.Email" class="form-control contact-input" placeholder="Вашият имейл" autocomplete="on" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3">
            <input asp-for="@Model.Subject" class="form-control contact-input" placeholder="Относно" />
            <span asp-validation-for="@Model.Subject" class="text-danger"></span>
        </div>
        <div class="mb-4">
            <textarea asp-for="@Model.Message" class="form-control contact-input" rows="5" placeholder="Вашето съобщение"></textarea>
            <span asp-validation-for="@Model.Message" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary px-4 py-2">
            Изпрати съобщение
        </button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}