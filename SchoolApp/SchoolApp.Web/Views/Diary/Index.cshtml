@model IEnumerable<DiaryIndexViewModel>

<div class="container-fluid px-0">
    <div class="row">
        <section class="col-lg-2 bg-light vh-100 p-3 border-end shadow-sm">
            <h4 class="mb-3">Меню</h4>
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        Дневници
                    </button>
                </h2>
                <div id="collapseOne" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                        <div class="btn-group-vertical d-flex" role="group" aria-label="Vertical radio toggle button group">
                            @{
                                int index = 0;
                            }

                            @foreach (var classes in Model)
                            {
                                var radioId = $"vbtn-radio{index}";

                                <input type="radio" class="btn-check" name="vbtn-radio" id="@radioId" autocomplete="off">
                                <label id="classBtn" class="btn btn-outline-dark d-flex align-items-center justify-content-center" for="@radioId" data-class-id="@classes.ClassId">
                                    <i class="fa-solid fa-children me-3"></i>
                                    @classes.ClassName
                                </label>
                                index++;
                            }
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="col-lg-10 bg-light p-4 d-flex mt-0">
            <div id="content" class="card shadow-sm p-4 w-100 mt-4">

            </div>
        </section>
    </div>
</div>
@section Scripts {
    <script src="~/js/Diary/DiaryContent.js" asp-append-version="true"></script>
    <script src="~/js/Diary/Popovers/GradesPopovers.js" asp-append-version="true"></script>
}

