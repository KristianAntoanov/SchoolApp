@model AddNewsViewModel
@{
    ViewData["Title"] = "Добави новина";
}

<div class="container mt-4">
    <h2 class="text-center mb-3">Добави новина</h2>
    <div class="mx-auto mb-4" style="width: 60%; height: 2px; background-color: #dc3545;"></div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <form method="post" enctype="multipart/form-data">
                <div class="card">
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="@Model.Title" class="form-label">Заглавие</label>
                            <input asp-for="@Model.Title" class="form-control" />
                            <span asp-validation-for="@Model.Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="@Model.Content" class="form-label">Съдържание</label>
                            <textarea asp-for="@Model.Content" class="form-control" rows="10"></textarea>
                            <span asp-validation-for="@Model.Content" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="@Model.Category" class="form-label">Категория</label>
                            <select asp-for="@Model.Category" class="form-select"
                                    asp-items="@EnumExtensions.ToSelectList<NewsCategory>()">
                            </select>
                            <span asp-validation-for="@Model.Category" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="@Model.Image" class="form-label">Изображение</label>
                            <input asp-for="@Model.Image" class="form-control" type="file" accept=".jpg,.jpeg,.png" />
                            <span asp-validation-for="@Model.Image" class="text-danger"></span>
                            <div class="form-text">Максимален размер: 2MB. Позволени формати: JPG, JPEG, PNG</div>
                        </div>
                    </div>

                    <div class="card-footer bg-transparent border-top-0">
                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>Отказ
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Запази
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}