@model EditTeacherFormModel
@{
    ViewData["Title"] = "Редактиране на учител";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-warning text-white">
                    <h4 class="mb-0">Редактиране на учител</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="form-group mb-3">
                            <label asp-for="FirstName" class="form-label"></label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="LastName" class="form-label"></label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="JobTitle" class="form-label"></label>
                            <input asp-for="JobTitle" class="form-control" />
                            <span asp-validation-for="JobTitle" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Image" class="form-label"></label>
                            <div class="input-group">
                                <input asp-for="Image" type="file" class="form-control"
                                       accept=".jpg,.jpeg,.png"
                                       style="display: none"
                                       id="imageInput" />

                                <div class="form-control d-flex justify-content-between align-items-center" id="fileNameDisplay">
                                    <span id="selectedFileName">
                                        @(string.IsNullOrEmpty(Model.CurrentImageFileName) ? "Няма избран файл" : Model.CurrentImageFileName)
                                    </span>
                                    <button type="button" class="btn-close"
                                            id="clearFileButton"
                                            style="display: @(string.IsNullOrEmpty(Model.CurrentImageFileName) ? "none" : "block");"
                                            aria-label="Clear file"></button>
                                </div>

                                <button class="btn btn-outline-secondary" type="button" id="browseButton">
                                    Избери файл
                                </button>
                            </div>
                            <div class="form-text">
                                Позволени формати: JPG, JPEG, PNG. Максимален размер: 2MB.
                            </div>
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="AvailableSubjects" class="form-label d-block"></label>
                            <div class="row g-3">
                                @foreach (var subject in Model.AvailableSubjects)
                                {
                                    <div class="col-md-6">
                                        <div class="form-check">
                                            <input type="checkbox"
                                                   name="SelectedSubjects"
                                                   value="@subject.Id"
                                                   class="form-check-input"
                                                   @(subject.IsSelected ? "checked" : "") />
                                            <label class="form-check-label">
                                                @subject.Name
                                            </label>
                                        </div>
                                    </div>
                                }
                            </div>
                            <span asp-validation-for="SelectedSubjects" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Назад
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Запази
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal за потвърждение на изтриване на снимката -->
<div class="modal fade" id="deleteImageModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Потвърждение</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Сигурни ли сте, че искате да премахнете снимката?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отказ</button>
                <a asp-action="DeleteImage" asp-route-id="@Model.Id" class="btn btn-danger">Изтрий</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>document.addEventListener('DOMContentLoaded', function () {
            const imageInput = document.getElementById('imageInput');
            const fileNameDisplay = document.getElementById('selectedFileName');
            const clearFileButton = document.getElementById('clearFileButton');
            const browseButton = document.getElementById('browseButton');

            // Първоначално състояние - показваме X ако има файл
            if (fileNameDisplay.textContent.trim() !== 'Няма избран файл') {
                clearFileButton.style.display = 'block';
            }

            // Показване на диалога за избор на файл при натискане на бутона
            browseButton.addEventListener('click', function () {
                imageInput.click();
            });

            // При избор на файл
            imageInput.addEventListener('change', function () {
                if (this.files.length > 0) {
                    fileNameDisplay.textContent = this.files[0].name;
                    clearFileButton.style.display = 'block';
                } else {
                    fileNameDisplay.textContent = 'Няма избран файл';
                    clearFileButton.style.display = 'none';
                }
            });

            // Изчистване на избрания файл
            clearFileButton.addEventListener('click', function () {
                imageInput.value = '';
                fileNameDisplay.textContent = 'Няма избран файл';
                clearFileButton.style.display = 'none';
            });
        });</script>
}