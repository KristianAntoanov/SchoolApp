@{
    ViewBag.Title = "Home";
}
<div class="container">
    <div class="row">
        <div class="col-md-12 text-center mb-3">
            <h1 class="text-uppercase fw-bold mb-3 mt-5">
                Админ Панел
            </h1>
        </div>
    </div>
    <div class="row mt-4 mb-5">
        <div class="col-2 text-center">
            <i class="fa fa-angle-double-left fa-4x me-3 text-secondary"></i>
        </div>
        <div class="col-8 text-center">
            <h4>Добре дошли в администраторския панел</h4>
            <p class="text-muted" id="currentTime"></p>
        </div>
        <div class="col-2 text-center">
            <i class="fa fa-angle-double-right fa-4x ms-3 text-secondary"></i>
        </div>
    </div>
    <div class="row mt-4 mb-5">
        <div class="col-12 text-center">
            <hr class="w-75 mx-auto">
            <i class="fa fa-school fa-3x text-secondary"></i>
            <hr class="w-75 mx-auto">
        </div>
    </div>
    <div class="row g-4">
        <div class="col-md-3">
            <div class="card h-100 text-center">
                <div class="card-body">
                    <i class="fa fa-users fa-3x mb-3"></i>
                    <h5 class="card-title">Студенти</h5>
                    <p class="card-text">Управление на студенти</p>
                    <a asp-area="Admin" asp-controller="Students" asp-action="Index" class="btn btn-outline-primary">
                        Достъп
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card h-100 text-center">
                <div class="card-body">
                    <i class="fa fa-chalkboard-teacher fa-3x mb-3"></i>
                    <h5 class="card-title">Учители</h5>
                    <p class="card-text">Управление на учители</p>
                    <a asp-area="Admin" asp-controller="Teachers" asp-action="Index" class="btn btn-outline-primary">
                        Достъп
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card h-100 text-center">
                <div class="card-body">
                    <i class="fa fa-images fa-3x mb-3"></i>
                    <h5 class="card-title">Галерия</h5>
                    <p class="card-text">Управление на галерията</p>
                    <a asp-area="Admin" asp-controller="Gallery" asp-action="Index" class="btn btn-outline-primary">
                        Достъп
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card h-100 text-center">
                <div class="card-body">
                    <i class="fa fa-key fa-3x mb-3"></i>
                    <h5 class="card-title">Права</h5>
                    <p class="card-text">Управление на права</p>
                    <a asp-area="Admin" asp-controller="Roles" asp-action="Index" class="btn btn-outline-primary">
                        Достъп
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/Admin/Home/Time.js" asp-append-version="true"></script>
}
