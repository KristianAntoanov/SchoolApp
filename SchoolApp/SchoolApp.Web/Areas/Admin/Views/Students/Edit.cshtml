@model EditStudentFormModel
@{
    ViewData["Title"] = "Редактиране на студент";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-warning text-white">
                    <h4 class="mb-0">Редактиране на студент</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="@Model.Id" />
                        <div class="form-group mb-3">
                            <label asp-for="@Model.FirstName" class="form-label">Име</label>
                            <input asp-for="@Model.FirstName" class="form-control" />
                            <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="@Model.MiddleName" class="form-label">Презиме</label>
                            <input asp-for="@Model.MiddleName" class="form-control" />
                            <span asp-validation-for="@Model.MiddleName" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="@Model.LastName" class="form-label">Фамилия</label>
                            <input asp-for="@Model.LastName" class="form-control" />
                            <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="@Model.ClassId" class="form-label-add-edit">Изберете Клас</label>
                            <select asp-for="@Model.ClassId" class="form-control" aria-required="true" asp-items="@(new SelectList(Model.AvailableClasses, "Id", "Name"))">
                                <option value="">-- Изберете клас --</option>
                            </select>
                            <span asp-validation-for="@Model.ClassId" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Назад
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Запази промените
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
